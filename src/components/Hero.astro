---
const { title, subtitle, ctaText, ctaHref } = Astro.props as {
  title: string;
  subtitle: string;
  ctaText: string;
  ctaHref: string;
};
---

<section class="hero">
  <img src={import.meta.env.BASE_URL + 'hero.jpg'} alt="Jerusalem Old City" class="hero-img" />
  <div class="hero-copy hero-topbar">
    <div class="hero-text">
      <h1>{title}</h1>
      <p class="sub">{subtitle}</p>
    </div>
    {ctaText && ctaHref && <a class="btn" href={ctaHref}>{ctaText}</a>}
  </div>
</section>
