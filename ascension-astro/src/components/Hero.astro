---
const { title, subtitle, ctaText, ctaHref } = Astro.props as {
  title: string;
  subtitle: string;
  ctaText: string;
  ctaHref: string;
};
---
<section class="hero">
  <img src="/hero.jpg" alt="Hero" class="hero-img" />
  <div class="hero-copy">
    <h1>{title}</h1>
    <p class="sub">{subtitle}</p>
    <a class="btn" href={ctaHref}>{ctaText}</a>
  </div>
</section>
